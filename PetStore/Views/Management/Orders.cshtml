@model IPagedList<PetStore.Models.DomainModels.Order>
@{
	ViewData["Title"] = "Index";
	ViewBag.Orders = Model;
}


<table id="orders" class="table table-striped table-bordered" style="width:100%">
	<thead>
		<tr>
			<th>Order date</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@{ foreach (var order in Model)
			{
				<tr>
					<td>@order.OrderDate</td>
					<td>@Html.ActionLink("Details", "OrderDetails", "Management", new { id = order.Id })</td>
				</tr>
			}
		}
	</tbody>
</table>

@Html.PagedListPager(Model, pageIndex => Url.Action("Orders", new { pageIndex }), new PagedListRenderOptions()
{
	LiElementClasses = new string[] { "page-item" },
	PageClasses = new string[] { "page-link" }
})
