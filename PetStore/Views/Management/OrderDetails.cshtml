@model PetStore.Models.DomainModels.Order
@{
	ViewData["Title"] = "OrderDetails";
}

<div class="form-group">
	@Html.Label("Order Date")
	@Html.TextBox("OrderDate", Model.OrderDate, new { @class = "form-control", @readonly = "readonly" })
</div>
<div class="form-group">
	@Html.Label("Customer Name")
	@Html.TextBox("CustomerName", $"{Model.User.FirstName} {Model.User.LastName}", new { @class = "form-control", @readonly = "readonly" })
</div>
<div class="form-group">
	@Html.Label("Contact")
	@Html.TextBox("Email", Model.User.Email, new { @class = "form-control", @readonly = "readonly" })
</div>

<h2>List of products within order:</h2>
<div>
	<ul class="list-group">
		@{
			foreach (var product in Model.OrderItems)
			{
				<li class="list-group-item">@product.Product.Name</li>
			}
		}
	</ul>
</div>